# Environment variables for observations_nids project
# Copy this file to .env and modify as needed

# Core Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DB_NAME=NidsObservation
DB_USER=db_user
DB_PASSWORD=db_password
DB_HOST=localhost
DB_PORT=3306

# Custom settings
USE_DEBUG_TOOLBAR=False
SESSION_COOKIE_AGE=3600
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# Logging (optional - defaults to project/observations/logs)
# DJANGO_LOG_DIR=/var/log/observations_nids  # For production

# Static/Media paths (optional - defaults to project root)
# DJANGO_STATIC_ROOT=/var/www/html/Observations_Nids/static
# DJANGO_MEDIA_ROOT=/var/www/html/Observations_Nids/media