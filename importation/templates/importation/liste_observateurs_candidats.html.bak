<!-- templates/importation/liste_observateurs_candidats.html -->
{% extends "base.html" %}

{% block title %}Gestion des observateurs candidats{% endblock %}

{% block content %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{% url 'accueil_importation' %}">Importation</a></li>
            <li class="breadcrumb-item active" aria-current="page">Observateurs candidats</li>
        </ol>
    </nav>

    <h1 class="mb-4">Gestion des observateurs candidats</h1>
    
    <div class="alert alert-info">
        <p>Cette page permet de valider les noms d'observateurs extraits des fiches transcrites et de les associer
           aux utilisateurs existants dans la base de données.</p>
    </div>
    
    <!-- Filtres de recherche -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Filtres</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="recherche">Recherche:</label>
                        <input type="text" name="recherche" id="recherche" class="form-control" 
                               value="{{ recherche }}" placeholder="Nom d'observateur...">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="statut">Statut:</label>
                        <select name="statut" id="statut" class="form-control">
                            <option value="tous" {% if statut == 'tous' %}selected{% endif %}>Tous</option>
                            <option value="valides" {% if statut == 'valides' %}selected{% endif %}>Validés</option>
                            <option value="non_valides" {% if statut == 'non_valides' %}selected{% endif %}>Non validés</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Button to create a new user -->
    <div class="mb-4">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#creerUtilisateurModal">
            <i class="fas fa-plus"></i> Créer un nouvel utilisateur
        </button>
    </div>
    
    <!-- Liste des observateurs candidats -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Observateurs candidats ({{ observateurs.paginator.count }})</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Nom transcrit</th>
                        <th>Utilisateur validé</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for observateur in observateurs %}
                    <tr>
                        <td>{{ observateur.nom_complet_transcrit }}</td>
                        <td>
                            {% if observateur.utilisateur_valide %}
                                {{ observateur.utilisateur_valide.first_name }} {{ observateur.utilisateur_valide.last_name }}
                            {% else %}
                                <span class="text-muted">Non validé</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if observateur.utilisateur_valide %}
                                <span class="badge badge-success">Validé</span>
                            {% else %}
                                <span class="badge badge-warning">En attente</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if not observateur.utilisateur_valide %}
                                <button type="button" class="btn btn-sm btn-primary"
                                        data-toggle="modal" data-target="#validerObservateurModal{{ observateur.id }}">
                                    Valider
                                </button>
                            {% else %}
                                <button type="button" class="btn btn-sm btn-secondary"
                                        data-toggle="modal" data-target="#validerObservateurModal{{ observateur.id }}">
                                    Modifier
                                </button>
                            {% endif %}
                            
                            <!-- Modal pour valider l'observateur -->
                            <div class="modal fade" id="validerObservateurModal{{ observateur.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                {% if not observateur.utilisateur_valide %}
                                                    Valider l'observateur
                                                {% else %}
                                                    Modifier la validation
                                                {% endif %}
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="post" action="{% url 'valider_observateur' observateur.id %}">
                                                {% csrf_token %}
                                                <div class="form-group">
                                                    <label for="utilisateur_valide{{ observateur.id }}">Sélectionnez l'utilisateur correspondant:</label>
                                                    <select name="utilisateur_valide" id="utilisateur_valide{{ observateur.id }}" class="form-control" required>
                                                        <option value="">-- Sélectionnez un utilisateur --</option>
                                                        {% for util in utilisateurs_valides %}
                                                            <option value="{{ util.id }}" 
                                                                {% if observateur.utilisateur_valide.id == util.id %}selected{% endif %}>
                                                                {{ util.first_name }} {{ util.last_name }} ({{ util.email }})
                                                            </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                
                                                <div class="text-right">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-primary">Valider</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Button to create new user from this candidate -->
                            <button type="button" class="btn btn-sm btn-info"
                                    data-toggle="modal" data-target="#creerDepuisObservateurModal{{ observateur.id }}">
                                Créer utilisateur
                            </button>
                            
                            <!-- Modal to create new user from this candidate -->
                            <div class="modal fade" id="creerDepuisObservateurModal{{ observateur.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Créer un nouvel utilisateur</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <!-- Dans templates/importation/observateurs_candidats.html, modifiez la modal pour créer un utilisateur -->

                                        <!-- Remplacez la section du modal pour la création d'un utilisateur -->
                                        <div class="modal-body">
                                            <form method="post" action="{% url 'creer_nouvel_utilisateur' %}">
                                                {% csrf_token %}
                                                <input type="hidden" name="observateur_candidat_id" value="{{ observateur.id }}">

                                                <!-- Essayer de diviser le nom transcrit en prénom et nom -->
                                                {% with nom_complet=observateur.nom_complet_transcrit.split %}
                                                    <div class="form-group">
                                                        <label for="prenom{{ observateur.id }}">Prénom:</label>
                                                        <input type="text" name="prenom" id="prenom{{ observateur.id }}"
                                                            class="form-control" value="{{ nom_complet.0|default:'' }}" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="nom{{ observateur.id }}">Nom:</label>
                                                        <input type="text" name="nom" id="nom{{ observateur.id }}"
                                                            class="form-control" value="{{ nom_complet.1|default:'' }}" required>
                                                    </div>
                                                {% endwith %}

                                                <div class="form-group">
                                                    <label for="email{{ observateur.id }}">Email:</label>
                                                    <input type="email" name="email" id="email{{ observateur.id }}"
                                                        class="form-control" required>
                                                </div>

                                                <div class="form-group">
                                                    <label for="username{{ observateur.id }}">Nom d'utilisateur:</label>
                                                    <input type="text" name="username" id="username{{ observateur.id }}"
                                                        class="form-control" required>
                                                </div>

                                                <div class="form-group form-check">
                                                    <input type="checkbox" name="est_transcription" id="est_transcription{{ observateur.id }}"
                                                        class="form-check-input" checked>
                                                    <label class="form-check-label" for="est_transcription{{ observateur.id }}">
                                                        Utilisateur issu d'une transcription manuscrite
                                                    </label>
                                                </div>

                                                <div class="text-right">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-success">Créer</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="4" class="text-center py-3">Aucun observateur candidat trouvé.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% if observateurs.paginator.num_pages > 1 %}
        <div class="card-footer">
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center mb-0">
                    {% if observateurs.has_previous %}
                        <li class="page-item">
                            <a class="page-link" href="?page=1&recherche={{ recherche }}&statut={{ statut }}">
                                &laquo; Première
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page={{ observateurs.previous_page_number }}&recherche={{ recherche }}&statut={{ statut }}">
                                Précédente
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">&laquo; Première</span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">Précédente</span>
                        </li>
                    {% endif %}
                    
                    <li class="page-item active">
                        <span class="page-link">
                            Page {{ observateurs.number }} sur {{ observateurs.paginator.num_pages }}
                        </span>
                    </li>
                    
                    {% if observateurs.has_next %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ observateurs.next_page_number }}&recherche={{ recherche }}&statut={{ statut }}">
                                Suivante
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page={{ observateurs.paginator.num_pages }}&recherche={{ recherche }}&statut={{ statut }}">
                                Dernière &raquo;
                            </a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <span class="page-link">Suivante</span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">Dernière &raquo;</span>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
        {% endif %}
    </div>
    
    <!-- Modal pour créer un nouvel utilisateur -->
    <div class="modal fade" id="creerUtilisateurModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Créer un nouvel utilisateur</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="{% url 'creer_nouvel_utilisateur' %}">
                        {% csrf_token %}
                        
                        <div class="form-group">
                            <label for="prenom">Prénom:</label>
                            <input type="text" name="prenom" id="prenom" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="nom">Nom:</label>
                            <input type="text" name="nom" id="nom" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" name="email" id="email" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur:</label>
                            <input type="text" name="username" id="username" class="form-control" required>
                        </div>
                        
                        <div class="text-right">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-success">Créer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
